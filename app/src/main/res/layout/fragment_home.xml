<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/swusymbol" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="swutore"
            android:textColor="@color/swuColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="58dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/search" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/banner01"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/main_banner" />

                <ImageView
                    android:id="@+id/banner02"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/usi_banner" />

                <ImageView
                    android:id="@+id/banner03"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/wendi_banner" />
            </ViewFlipper>

            <!--            <ImageView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="160dp"-->
            <!--                android:background="#DBDBDB"-->
            <!--                android:layout_marginBottom="10dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:text="인기 추천 공식 굿즈"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/detaillayout1"
                        android:layout_width="182dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detailImage1"
                            android:layout_width="182dp"
                            android:layout_height="135dp"
                            android:layout_marginBottom="5dp"
                            android:background="#DBDBDB"
                            android:scaleType="centerCrop"
                            android:src="@drawable/usinotecrop" />

                        <TextView
                            android:id="@+id/detailname1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopubworld_dotum_medium"
                            android:text="유시 무선 노트"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detailprice1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3,000"
                                android:textColor="#000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="원"
                                android:textColor="#000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/detaillayout2"
                        android:layout_width="182dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detailImage2"
                            android:layout_width="182dp"
                            android:layout_height="135dp"
                            android:layout_marginBottom="5dp"
                            android:background="#DBDBDB"
                            android:src="@drawable/wendi_mirror_crop" />

                        <TextView
                            android:id="@+id/detailname2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopubworld_dotum_medium"
                            android:text="웬디 손거울"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detailprice2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3,000"
                                android:textColor="#000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="원"
                                android:textColor="#000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:text="신규 공식 굿즈"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/detaillayout3"
                        android:layout_width="182dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detailImage3"
                            android:layout_width="182dp"
                            android:layout_height="135dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/usifile_crop" />

                        <TextView
                            android:id="@+id/detailname3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopubworld_dotum_medium"
                            android:text="유시 L자 홀더"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detailprice3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1,500"
                                android:textColor="#000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="원"
                                android:textColor="#000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detaillayout4"
                        android:layout_width="182dp"
                        android:layout_height="180dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="182dp"
                            android:layout_height="135dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/swufile_crop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopubworld_dotum_medium"
                            android:text="슈니즈 L자 홀더"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1,500"
                                android:textColor="#000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="원"
                                android:textColor="#000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:text="신규 비공식 굿즈 펀딩"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/fundingDetail1"
                            android:layout_width="182dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="182dp"
                                android:layout_height="135dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/sticker2" />

                            <TextView
                                android:id="@+id/fundingNickLeft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kopubworld_dotum_medium"
                                android:text="고영희가세상을지배한다"
                                android:textColor="#808080"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/fundingItemLeft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kopubworld_dotum_medium"
                                android:text="홀로그램 스티커"
                                android:textColor="#000"
                                android:textSize="14dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fundingPercentLeft"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textColor="#000"
                                    android:textSize="14dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fundingDetail2"
                            android:layout_width="182dp"
                            android:layout_height="200dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="182dp"
                                android:layout_height="135dp"
                                android:layout_marginBottom="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sticker" />

                            <TextView
                                android:id="@+id/fundingNickRight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kopubworld_dotum_medium"
                                android:text="고영희가세상을지배한다"
                                android:textColor="#808080"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/fundingItemRight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kopubworld_dotum_medium"
                                android:text="홀로그램 스티커"
                                android:textColor="#000"
                                android:textSize="14dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fundingPercentRight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textColor="#000"
                                    android:textSize="14dp" />
                            </LinearLayout>





                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
