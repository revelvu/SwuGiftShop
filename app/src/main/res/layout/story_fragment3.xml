<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp"
                android:background="#DEDEDE"
                android:scaleType="centerCrop"
                android:src="@drawable/usifile_crop" />

            <TextView
                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubworld_dotum_bold"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:text="유시 L자 파일"
                android:textColor="#000"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,500"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="원"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DBDBDB" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:background="@drawable/buttonedge"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/minus2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center_vertical"
                    android:text="ㅡ"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/usiLNum"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="@drawable/buttonedge"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="1" />

                <Button
                    android:id="@+id/plus2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textSize="12dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DBDBDB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_medium"
                    android:layout_centerVertical="true"
                    android:text="총 상품 금액"
                    android:textColor="#000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/productTotalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,500"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="원"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/empty_heart"
                    android:layout_width="50dp"
                    android:layout_height="52dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/buttonedge"
                    android:padding="8dp"
                    android:src="@drawable/heartempty" />

                <Button
                    android:id="@+id/fundingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:background="@color/swuColor"
                    android:padding="15dp"
                    android:text="구입하기"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#DBDBDB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubworld_dotum_bold"
                android:padding="10dp"
                android:gravity="center"
                android:text="유시 L자 파일"
                android:textColor="#000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/usifile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubworld_dotum_medium"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="들고 다니기 딱 좋은 사이즈로 실용성을 더한
                              유시 L자 파일 "
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>